<StatusMessage Message="@StatusMessage" />


<RadzenCard class="shadow-sm p-4 border rounded-3">
    <h3 class="mb-4">Recovery codes</h3>
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <RadzenIcon Icon="warning" class="me-2" />
        <div>
            <p><strong>Put these codes in a safe place.</strong></p>
            <p>If you lose your device and don't have the recovery codes, you will lose access to your account.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="d-flex flex-wrap gap-2">
                @foreach (var recoveryCode in RecoveryCodes)
                {
                    <span class="badge bg-secondary p-2 shadow-sm recovery-code">@recoveryCode</span>
                }
            </div>
        </div>
    </div>
</RadzenCard>


@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
