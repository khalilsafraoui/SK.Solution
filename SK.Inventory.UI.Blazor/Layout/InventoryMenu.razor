@using Microsoft.Extensions.Localization
@using SK.Inventory.UI.Blazor.Resources
@inject IStringLocalizer<InventoryTextRessources> _localizer
<AuthorizeView Roles="@($"{RoleType.Inventory_Manager},{RoleType.Inventory_Viewer},{RoleType.Inventory_Coordinator}")">
    <Authorized Context="Inventory_ManagerAndInventory_ViewerAndInventory_Coordinator">
        <div class="nav-item px-3">
            <a class="nav-link p-2 d-flex justify-content-between align-items-center"
               data-bs-toggle="collapse" href="#inventoryMenu">
                <span class="d-flex align-items-center gap-2">
                    <i class="bi bi-journal-text-nav-menu"></i> <span>@_localizer["Inventory_Menu"]</span>
                </span>
                <i class="bi bi-chevron-down-nav-menu"></i>
            </a>
            <div class="collapse ps-3" id="inventoryMenu">
                <NavLink class="nav-link p-2 d-flex align-items-center gap-2" href=@Routes.Inventory_products Match="NavLinkMatch.All">
                    <i class="bi bi-box-seam-nav-menu"></i> <span>@_localizer["Inventory_Products_Menu"]</span>
                </NavLink>
                <AuthorizeView Roles="@($"{RoleType.Inventory_Manager},{RoleType.Inventory_Viewer}")">
                    <Authorized Context="Inventory_ManagerAndInventory_Viewer">
                <NavLink class="nav-link p-2 d-flex align-items-center gap-2" href=@Routes.Inventory_Categories Match="NavLinkMatch.All">
                            <i class="bi bi-tags-fill-nav-menu"></i> <span>@_localizer["Inventory_Categories_Menu"]</span>
                </NavLink>
                   </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </Authorized>
</AuthorizeView>